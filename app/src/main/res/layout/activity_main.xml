<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_o2Trainer"
        android:layout_width="230dp"
        android:layout_height="76dp"
        android:onClick="goToO2Trainer"
        android:text="@string/o2_trainer"
        android:background="@color/gray"
        android:textColor="@color/white"
        android:shadowColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30" />

    <Button
        android:id="@+id/button_notifier"
        android:layout_width="230dp"
        android:layout_height="76dp"
        android:background="@color/gray"
        android:onClick="goToNotifier"
        android:shadowColor="@color/white"
        android:text="@string/reminder"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_o2Trainer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/button_o2Trainer"
        app:layout_constraintTop_toBottomOf="@+id/button_o2Trainer"
        app:layout_constraintVertical_bias="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>